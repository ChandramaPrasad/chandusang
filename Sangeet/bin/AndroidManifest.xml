<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.motion.sangeet"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.example.application.MainApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/YourAppTheme.TransparentActionBar.Light" >
        <activity
            android:name="com.motion.actionbar.BaseActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlayerActivity"
            android:label="@string/title_activity_base" >
        </activity>
        <activity
            android:name=".MakeYourMoodPlayList"
            android:label="@string/title_activity_make_your_mood_play_list" >
        </activity>
        <activity
            android:name=".TabActivity"
            android:label="@string/title_activity_make_your_mood_play_list" >
        </activity>
        <activity
            android:name=".MakeYourMoodMenuActivity"
            android:label="@string/title_activity_make_your_mood_menu"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".NewArrivalActivity"
            android:label="@string/title_activity_new_arrival" >
        </activity>
        <activity
            android:name=".MostViewActivity"
            android:label="@string/title_activity_most_view" >
        </activity>
        <activity
            android:name=".SpecialBirthdayActivity"
            android:label="@string/title_activity_special_birthday" >
        </activity>
        <activity
            android:name=".VideoSongActivity"
            android:label="@string/title_activity_video_song" >
        </activity>
        <activity
            android:name=".ComedyActivity"
            android:label="@string/title_activity_comedy" >
        </activity>
        <activity
            android:name=".RomanceActivity"
            android:label="@string/title_activity_romance" >
        </activity>
        <activity
            android:name="com.motion.videocontroller.VideoPlayerActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize"
            android:label="@string/title_activity_romance" >
        </activity>
        <activity
            android:name=".FeedBackActivity"
            android:label="@string/title_activity_feed_back" >
        </activity>
        <activity
            android:name=".DevotionalAlbumActivity"
            android:label="@string/title_activity_devotional_album" >
        </activity>
        <activity
            android:name=".SongsActivity"
            android:label="@string/title_activity_songs" >
        </activity>
        <activity
            android:name=".SignUpActivity"
            android:label="@string/title_activity_sign_up"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name="com.motion.audiocontroller.AudioControllerActivity"
            android:label="@string/title_activity_audio_controller" >
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name=".EditProfileActivity"
            android:label="@string/title_activity_edit_profile"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity android:name=".SearchViewActivity" >
        </activity>
        <activity
            android:name=".VideoPlayListActivity"
            android:label="@string/title_activity_video_play_list" >
        </activity>

        <service android:name="com.codeslap.groundy.GroundyService" />
    </application>

</manifest>