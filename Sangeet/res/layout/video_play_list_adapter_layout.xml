<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp" >

        <ImageView
            android:id="@+id/imageViewPlayList"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/boy" />

        <LinearLayout
            android:id="@+id/layoutVideoSongDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/imageViewPlayList"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewVideoNameVideoPlayList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:singleLine="true"
                android:text="tujhe dekha to ye jana sanam"
                android:textColor="#cecdce" />

            <TextView
                android:id="@+id/textViewDescriptionVideoPlayList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:lines="2"
                android:text="In this song hero and heroin are sahruk khan and kajol and singer is nhi pta"
                android:textColor="#cecdce" />
        </LinearLayout>

        <View
            android:id="@+id/videoListViewView"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/imageViewPlayList"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:background="@color/gray" />
    </RelativeLayout>

</RelativeLayout>