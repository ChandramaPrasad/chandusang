<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/videobg" >

    <RelativeLayout
        android:id="@+id/videoRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" >

        <ImageView
            android:id="@+id/videoImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/boy" />

        <ImageView
            android:id="@+id/playImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/play" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/videoRelativeLayout"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:paddingBottom="5dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/viewTimerLinerLayout"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_right_grid_item"
                android:singleLine="true"
                android:text="Geetanjali Comedy Scene"
                android:textColor="@color/white"
                android:textSize="@dimen/name_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/viewTimerLinerLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/timeImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_right_grid_item"
                android:background="@drawable/duration" />

            <TextView
                android:id="@+id/timeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_right_grid_item"
                android:singleLine="true"
                android:text="6:22"
                android:textColor="@color/white"
                android:textSize="@dimen/name_text_size" />

            <View
                android:id="@+id/view"
                android:layout_width="0.5dp"
                android:layout_height="12dp"
                android:layout_marginRight="@dimen/margin_right_grid_item"
                android:background="@android:color/darker_gray" />

            <ImageView
                android:id="@+id/viewImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_right_grid_item"
                android:background="@drawable/views" />

            <TextView
                android:id="@+id/viewTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_right_grid_item"
                android:singleLine="true"
                android:text="52"
                android:textColor="@color/white"
                android:textSize="@dimen/name_text_size" />

            <TextView
                android:id="@+id/viewsTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_right_grid_item"
                android:singleLine="true"
                android:text="Views"
                android:textColor="@color/white"
                android:textSize="@dimen/name_text_size" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/videourlTextView"
        android:layout_width="0.5dp"
        android:layout_height="0.5dp" />

</RelativeLayout>